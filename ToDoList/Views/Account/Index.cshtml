@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of users</h2>
<table class="table">
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                <p>
                    <a style="width: 110px" class="btn btn-primary btn-sm" asp-action="Create" asp-controller="Account" asp-route-id="@user.Id">
                       To log as admin
                    </a>
                </p>
                <p>
                    <a style="width: 110px" class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">
                    Access rights
                    </a>
                </p>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button style="width: 110px" type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a style="width: 110px" class="btn btn-primary btn-sm" asp-action="Create">
    Add role
</a>

